<h2>お問い合わせ</h2>

<div class="contact-form">
    <%= form_for @contact, :url => contacts_send_msg_path do |f| %>
      <table class="table">
        <tr>
          <th>名前</th>
          <td>
            <%= f.hidden_field :name %>
            <%= @contact.name %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= f.hidden_field :email %>
            <%= @contact.email %>
          </td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td>
            <%= f.hidden_field :message %>
            <%= simple_format(@contact.message, :align => "left") %>
          </td>
        </tr>
      </table>
      <div class="text-center">
          <%= f.submit '送信', :class => 'btn btn-primary' %>
      </div>
    <% end %>
</div>