<div id="diary-menu-table">
<table class="table table-striped table-bordered table-hover table-font">
    <tbody>
        <tr>
           <th>メニュー名</th>
           <th>回数</th>
           <th>セット数</th>
           <th>レスト(分)</th>
           <th>レスト(秒)</th>
        </tr>
        <%= f.nested_fields_for :diary_menus, wrapper_tag: :tr do |q| %>
            <td><%= q.select :menu_id, @menu_list, class: 'form-control' %></td>
            <td><%= q.number_field :num, :min => 0, class: 'form-control' %></td>
            <td><%= q.number_field :set, :min => 0, class: 'form-control' %></td>
            <td><%= q.number_field :rest_min, :min => 0, class: 'form-control' %></td>
            <td><%= q.number_field :rest_sec, :sec => 0, class: 'form-control' %></td>
            <td><%= q.remove_nested_fields_link 'Delete', class: 'btn btn-danger', role: 'button' %></td>
        <% end %>
    </tbody>
</table>
<%= f.add_nested_fields_link :diary_menus, 'Add new', class: 'btn btn-primary', role: 'button' %>
</div>