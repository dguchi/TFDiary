<h2>グループ作成</h2>
<br>

<%= render "groups/error_notice" %>

<div class="group-create">
    <%= form_for @group, :url => {:action => 'create'} do |f| %>
        <div class="form-group">
            <%= f.label :name, "グループ名" %>
            <%= f.text_field :name, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :explain, "グループ説明" %>
            <%= f.text_area :explain, :size => "40×5", :class => "form-control" %>
        </div>

        <%= f.hidden_field :leader_id, :value => current_user.id %>

        <div class="text-center">
            <%= f.submit "作成する", :class => "btn btn-primary" %>
        </div>
    <% end %>
</div>
