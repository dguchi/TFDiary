<h2>グループ作成</h2>
<br>

<%= render "groups/error_notice" %>

<div class="group-create">
    <%= form_for @group, :url => {:action => 'create'} do |f| %>
        <%= f.label :name, "グループ名" %> <br>
        <%= f.text_field :name %> <br>
        <br>
        <%= f.label :explain, "グループ説明" %> <br>
        <%= f.text_area :explain, :size => "40×5" %> <br>
        <br>
        <%= f.hidden_field :leader_id, :value => current_user.id %>
        <%= f.submit "作成する" %>
    <% end %>
</div>
